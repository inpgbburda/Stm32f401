{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "D:/Programy/ARM_toolchain/GnuWin32/bin/make all",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean project",
            "type": "shell",
            "command": "D:/Programy/ARM_toolchain/GnuWin32/bin/make clean",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=on",
            "type": "shell",
            "command": "cmake ../Tools/Cmake -DSTATIC_ANALYSIS=ON",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Build_gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=off",
            "type": "shell",
            "command": "D:/Programy/ARM_toolchain/Cmake/bin/cmake",
            "args": [
                        ".",
                        "--preset=default"
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Tools/Cmake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "target erase",
            "type": "shell",
            "command": "D:/Programy/STM32_CubeProg/bin/STM32_Programmer_CLI.exe",
            "args": [
                        "--erase",
                        "all"
                    ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "target flash",
            "type": "shell",
            "command": "D:/Programy/STM32_CubeProg/bin/STM32_Programmer_CLI.exe",
            "args": [
                        "--connect",    /*connect to the CPU*/
                        "port=SWD",
                        "--download",   /*flash the binary into memory*/
                        "stm32f401.hex",
                        "--start",      /*start the execution*/
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }

    ]
}