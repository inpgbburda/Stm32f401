{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "${env:MAKE_PATH} all",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/Tools/Cmake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean project",
            "type": "shell",
            "command": "$env:makePath clean",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Tools/Cmake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=on",
            "type": "shell",
            "command": "cmake ../Tools/Cmake -DSTATIC_ANALYSIS=ON",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Build_gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=off",
            "type": "shell",
            "command": "D:\\Programy\\ARM_toolchain\\Cmake\\bin\\cmake",
            "args": [
                        ".",
                        "-G",
                        "MinGW Makefiles"  // "MinGW Makefiles" must be quoted and VS code adds quotes automatically to arguments with spaces
                ],
            "options": {
                "cwd": "${workspaceFolder}/Tools/Cmake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }

    ]
}