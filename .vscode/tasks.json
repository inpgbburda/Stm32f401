{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "${config:makePath} all",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "clean project",
            "type": "shell",
            "command": "${config:makePath} clean",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=on",
            "type": "shell",
            "command": "${config:cmakePath} -DSTATIC_ANALYSIS=ON",
            "args": [],

            "options": {
                "cwd": "${workspaceFolder}/Build_gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile SA=off",
            "type": "shell",
            "command": "${config:cmakePath}",
            "args": [
                        ".",
                        "--preset=default"
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Tools/Cmake"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "target erase",
            "type": "shell",
            "command": "${config:Stm32ProgrammerPath}",
            "args": [
                        "--erase",
                        "all"
                    ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "target flash",
            "type": "shell",
            "command": "${config:Stm32ProgrammerPath}",
            "args": [
                        "--connect",    /*connect to the CPU*/
                        "port=SWD",
                        "--download",   /*flash the binary into memory*/
                        "stm32f401.hex",
                        "--start",      /*start the execution*/
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Output"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "generate makefile pwm ut",
            "type": "shell",
            "command": "${config:cmakePath}",
            "args": [
                        ".",
                        "--preset=default"
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Sw_Components/04_Drv/pwm/pwm_UT/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build pwm ut",
            "type": "shell",
            "command": "${config:makePath} all",
            "args": [
                    ],
            "options": {
                "cwd": "${workspaceFolder}/Sw_Components/04_Drv/pwm/pwm_UT/Output_UT"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },

    ]
}